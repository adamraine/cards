{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "strict": true,
  },
  "include": [
    "src/components",
    "types"
  ],
  "exclude": [
    "./node_modules/**/*.ts"
  ]
}
